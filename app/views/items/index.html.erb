  <%# FURIMAの特徴 %>
  <div class='feature-contents'>
    <h2 class='title'>
      FURIMAの特徴
    </h2>
    <ul class='feature-lists'>
      <li class='list'>
        <%= image_tag "furima-intro04.png", class:"list-pict" %>
        <h3 class='feature-list-text'>
          簡単に売り買いできる
        </h3>
        <p class='feature-list-description'>
          スマホひとつで、いつでもどこでも簡単に出品・購入が可能！
        </p>
      </li>
      <li class='list'>
        <%= image_tag "furima-intro05.png", class:"list-pict" %>
        <h3 class='feature-list-text'>
          売上金は即日振込みに対応
        </h3>
        <p class='feature-list-description'>
          午前9時までに振込を依頼いただければ、翌日に指定の口座に入金いたします。
        </p>
      </li>
      <li class='list'>
        <%= image_tag "furima-intro06.png", class:"list-pict" %>
        <h3 class='feature-list-text'>
          様々な支払いに対応
        </h3>
        <p class='feature-list-description'>
          お支払いは、クレジットカードだけでなく、ポイントや売上金など多彩な方法があります。
        </p>
      </li>
    </ul>
  </div>
  <%# /FURIMAの特徴 %>
  <%# 商品検索フォーム %> 
        <h2 id='anchor', class='form_title'>商品検索</h2>
        <div class="search_form" >
        <%= search_form_for @p, url: items_search_path do |f| %>
          <div class='form_contents'>
            <%= f.label :item_name_cont, '商品名', class: "search_content"%>
            <%= f.search_field :item_name_cont, placeholder: "キーワードを入力" %>
          </div>
          <div class='form_contents'>
            <%= f.label :category_id_eq, 'カテゴリー', class: "search_content"%>
            <%= f.collection_select :category_id_eq, Category.where.not(id: 1), :id, :name, include_blank: "指定なし" %></div>
          <div class='form_contents'>
            <%= f.label :item_state_id_eq, '商品の状態', class: "search_content"%>
            <%= f.collection_select :item_state_id_eq, ItemState.where.not(id: 1), :id, :name, include_blank: "指定なし" %></div>
          <div class='form_contents'>
            <%= f.label :price, '価格', class: "search_content"%>
            <div>
              <%= f.radio_button :price_lteq, '' %>
                指定なし
              <%= f.radio_button :price_lteq, '1000' %>
                1000円以下
              <%= f.radio_button :price_lteq, '2500' %>
                2500円以下
              <%= f.radio_button :price_lteq, '5000' %>
                5000円以下
            </div>
          </div>
            <%= f.button :type => "submit", class: "submit" do%>
              <i class="fa fa-search" aria-hidden="true"></i>検索
            <%end%>
        <% end %>
        </div>
  <%# /商品検索フォーム %>
  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>ピックアップカテゴリー</h2>
    <%= link_to '新規投稿商品', "#", class: "subtitle" %>
    <ul class='item-lists'>
      <% @items.each do |item| %>  
        <li class='list'>
          <%= link_to item_path(item.id) do %>
          <div class='item-img-content'>
          <%# 投稿した1枚目のみを表示 %>
          <% if item.images.count > 0 %>
            <%= image_tag item.images.first, class: "item-img" %>
          <%end%>
          <%# 購入されたらsold outを表示 %>
            <% if item.order.present? %>
            <div class='sold-out'>
              <span>Sold Out!!</span>
            </div>
            <% end %>

          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.item_name %>
            </h3>
            <div class='item-price'>
              <span><%= item.price %>円<br><%= item.paying_for_shipping.name %></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %> 
      <%# 出品がなければ表示 %>
      <% if @items.length == 0 %>
        <li class='list'>
          <%= link_to '#' do %>
          <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
          <div class='item-info'>
            <h3 class='item-name'>
              商品を出品してね！
            </h3>
            <div class='item-price'>
              <span>99999999円<br>(税込み)</span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= link_to(new_item_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
